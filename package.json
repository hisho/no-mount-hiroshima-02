{
  "name": "tailwind",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "run-p dev:*",
    "dev:next": "next dev -p 3000",
    "build": "run-s build:next",
    "build:next": "next build",
    "start": "next start",
    "lint": "run-p lint:*",
    "lint:next": "next lint --dir src --ignore-path .prettierignore --max-warnings 0",
    "lint:typecheck": "tsc --pretty --noEmit",
    "lint:stylelint": "stylelint --ignore-path .gitignore './src/**/*.css'",
    "lint:prettier": "prettier --check .",
    "format": "run-s format:*",
    "format:eslint": "pnpm lint:next --fix",
    "format:stylelint": "pnpm lint:stylelint --fix",
    "format:prettier": "pnpm lint:prettier --write"
  },
  "dependencies": {
    "@next/font": "13.4.9",
    "@t3-oss/env-nextjs": "^0.6.0",
    "clsx": "^1.2.1",
    "next": "13.4.9",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-syntax-highlighter": "^15.5.0",
    "react-use": "^17.4.0",
    "tailwind-merge": "^1.13.2",
    "ts-pattern": "^5.0.1",
    "typesafe-utils": "^1.16.2",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@tailwindcss/container-queries": "^0.1.1",
    "@tsconfig/strictest": "^2.0.1",
    "@types/lodash": "^4.14.195",
    "@types/node": "20.4.2",
    "@types/react": "18.2.14",
    "@types/react-dom": "18.2.7",
    "@types/react-syntax-highlighter": "^15.5.7",
    "autoprefixer": "^10.4.14",
    "dotenv": "^16.3.1",
    "eslint": "8.44.0",
    "eslint-config-next": "13.4.9",
    "eslint-plugin-perfectionist": "^1.4.0",
    "eslint-plugin-tailwindcss": "^3.13.0",
    "eslint-plugin-testing-library": "^5.11.0",
    "lodash": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.25",
    "prettier": "^3.0.0",
    "prettier-plugin-tailwindcss": "^0.4.0",
    "stylelint": "^15.10.1",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-recess-order": "^4.3.0",
    "stylelint-config-standard": "^34.0.0",
    "tailwindcss": "^3.3.2",
    "typescript": "5.1.6"
  },
  "volta": {
    "node": "18.16.1"
  }
}
